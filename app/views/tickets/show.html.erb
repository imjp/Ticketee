<h2><%= @ticket.title %></h2> 
<%= simple_format(@ticket.description) %>
<br>
 
	<h3>Attached Files</h3>
	<div class="asset">
		<% @ticket.assets.each do |asset| %>
			<p>
				<%= link_to File.basename(asset.asset_file_name), asset.asset.url %>
			</p>
			<p><small><%= number_to_human_size(asset.asset.size) %></small></p>
		<% end %>
		<br> 

<%= link_to "Edit Ticket", [:edit, @project, @ticket] %> <br>
<%= link_to "Delete Ticket", [@project, @ticket], :method => :delete, :confirm => "Are you sure you want to delete this ticket?" %> <br>
Back to <%= link_to @project.name, @project %>
